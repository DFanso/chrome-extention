{
  "manifest_version": 3,
  "name": "Profile Viewer",
  "version": "1.0",
  "description": "Retrieves and displays profile information using an access token.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/16x16.png",
      "48": "images/48x48.png",
      "128": "images/128x128.png"
    }
  },
  "icons": {
    "16": "images/16x16.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png"
  }
} 